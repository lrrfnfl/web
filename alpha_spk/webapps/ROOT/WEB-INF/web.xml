<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>SPK</display-name>
  <welcome-file-list>
    <welcome-file>main.jsp</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>10</session-timeout>
  </session-config>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Restricted methods</web-resource-name>
      <url-pattern>/*</url-pattern>
      <http-method>PUT</http-method>
      <http-method>DELETE</http-method>
      <http-method>OPTIONS</http-method>
      <http-method>TRACE</http-method>
      <http-method>COPY</http-method>
      <http-method>MOVE</http-method>
    </web-resource-collection>
    <auth-constraint />
  </security-constraint>
  <error-page>
    <error-code>400</error-code>
    <location>/error.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/error.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/error.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/error.jsp</location>
  </error-page>
  <resource-ref>
    <description>PostgreSQL Datasource</description>
    <res-ref-name>jdbc/postgres</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
    <description>MySQL Datasource</description>
    <res-ref-name>jdbc/mysql</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <context-param>
    <param-name>use_database</param-name>
    <param-value>0</param-value>
  </context-param>
  <context-param>
    <param-name>display_categolized_treeview</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>upload_path</param-name>
    <param-value>upfiles</param-value>
  </context-param>
  <context-param>
    <param-name>upload_max_size</param-name>
    <param-value>100</param-value>
  </context-param>
  <context-param>
    <param-name>download_path</param-name>
    <param-value>downfiles</param-value>
  </context-param>
  <context-param>
    <param-name>watermark_images_path</param-name>
    <param-value>images/watermark</param-value>
  </context-param>
  <context-param>
    <param-name>cert_path</param-name>
    <param-value>setup/cert</param-value>
  </context-param>
  <context-param>
    <param-name>decoder_path</param-name>
    <param-value>downfiles/tools</param-value>
  </context-param>
  <context-param>
    <param-name>decoder_filename</param-name>
    <param-value>SPKDecoder.zip</param-value>
  </context-param>
   <context-param>
     <param-name>activate_user_synchronization</param-name>
     <param-value>true</param-value>
   </context-param>
  <!-- SMTP 설정 -->
  <!-- SMTP 서버가 계정 인증 하지 않는 경우, smtp_sender_password 의 param-value 값은 공백으로 설정 -->
  <!-- gmail Server 이용시 -->
  <context-param>
    <param-name>smtp_server_host</param-name>
    <param-value>smtp.gmail.com</param-value>
  </context-param>
  <context-param>
    <param-name>smtp_server_port</param-name>
    <param-value>587</param-value>
  </context-param>
  <context-param>
    <param-name>smtp_sender</param-name>
    <param-value>account@gmail.com</param-value>
  </context-param>
  <context-param>
    <param-name>smtp_sender_password</param-name>
    <param-value>password</param-value>
  </context-param>
  <!-- 자체 SMTP Server 이용시 -->
