    <param-value>bizsafer@113.130.69.122</param-value>
  </context-param>
  <context-param>
    <param-name>smtp_sender_password</param-name>
    <param-value></param-value>
  </context-param>
  -->
  <!-- SMTP 설정 -->
  <context-param>
    <param-name>quartz:config-file</param-name>
    <param-value>/conf/quartz.properties</param-value>
  </context-param>
  <context-param>
    <param-name>quartz:start-scheduler-on-load</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>quartz:wait-on-shutdown</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>quartz:shutdown-on-unload</param-name>
    <param-value>true</param-value>
  </context-param>
  <listener>
    <listener-class>org.quartz.ee.servlet.QuartzInitializerListener</listener-class>
  </listener>
  <listener>
    <display-name>SessionListener</display-name>
    <listener-class>com.spk.listener.SessionListener</listener-class>
  </listener>
  <listener>
    <display-name>DriverManagerListener</display-name>
    <listener-class>com.spk.listener.DriverManagerListener</listener-class>
  </listener>
</web-app>
